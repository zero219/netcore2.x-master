@using netcore2.Web.Models.IdentityModels
@model LoginViewModel
@{
    ViewData["Title"] = "登录";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Login">
            <h4>请登录您的账号密码</h4>
            <hr>
            <div class="text-danger validation-summary-valid" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input class="form-control" asp-for="UserName" />
                <span class="text-danger field-validation-valid" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassWord"></label>
                <input class="form-control" asp-for="PassWord" />
                <span class="text-danger field-validation-valid" asp-validation-for="PassWord"></span>
            </div>
            <button type="submit" class="btn btn-default">登录</button>
        </form>
    </div>
</div>

